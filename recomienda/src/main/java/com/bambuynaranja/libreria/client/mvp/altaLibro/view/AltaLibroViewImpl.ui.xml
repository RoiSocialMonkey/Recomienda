<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<g:HTMLPanel>
	    <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr />
                    <h2 class="intro-text text-center"><strong>Alta Libro</strong>
                    </h2>
                    <hr />
                    <form role="form">
                        <div>
                            <!-- nav tabs -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="active">
                                    <a href="#datosPrales" aria-controls="datosPrales" role="tab" data-toggle="tab">Datos principales</a>
                                </li>
                                <li role="presentation">
                                    <a href="#edicion" aria-controls="edicion" role="tab" data-toggle="tab">Edición</a>
                                </li>
                            </ul>
                            <!-- Fin nav tabs -->

                            <!-- Tab panes -->
						  	<div class="tab-content">
						    	<div role="tabpanel" class="tab-pane fade in active" id="datosPrales">
			                        <div class="row">
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                                <label>Título</label>
			                                <b:TextBox name="titulo" styleName="form-control" ui:field="tituloTextBox" allowBlank="true"/>
			                            </div>
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                                <label>Autor</label>
			                                <b:TextBox name="titulo" styleName="form-control" ui:field="autorTextBox" allowBlank="true"/>
			                            </div>
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                            	<label>Año 1ª publicación</label>
			                            	<b:TextBox name="titulo" styleName="form-control" ui:field="anho1PublicacionTextBox" allowBlank="true"/>
			                            </div>                            
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                            	<label>Idioma original</label>
			                            	<b:TextBox name="titulo" styleName="form-control" ui:field="idiomaOriginalTextBox" allowBlank="true"/>
			                            </div>			                            
			                        </div>						    	    
								</div>
						    	<div role="tabpanel" class="tab-pane fade" id="edicion">
						    	    <div class="row">
						    	       <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                            	<label>ISBN</label>
			                            	<input type="text" class="form-control" />
			                            </div>
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                                <label>Editorial</label>
			                                <input type="text" class="form-control" />
			                            </div>                            
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                            	<label>Año edición</label>
			                            	<input type="number" class="form-control" />
			                            </div>
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                            	<label>Distribuidora</label>
			                            	<input type="text" class="form-control" />
			                            </div>
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                            	<label>Estado</label>
			                            	<input type="text" class="form-control" />
			                            </div>
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                            	<label>Existencias distribuidora</label>
			                            	<input type="number" class="form-control" />
			                            </div>
			                            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
			                            	<label>Stock</label>
			                            	<input type="number" class="form-control" />
			                            </div>
			                            <div class="form-group col-lg-2 col-md-2 col-sm-6 col-xs-12">
			                            	<label>PVC</label>
			                            	<input type="number" class="form-control" />
			                            </div>
			                            <div class="form-group col-lg-2 col-md-2 col-sm-6 col-xs-12">
			                            	<label>PVP</label>
			                            	<input type="number" class="form-control" />
			                            </div>
			                            <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
			                            	<label>Formato</label>
			                            	<input type="number" class="form-control" />
			                            </div>
			                            <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
			                            	<label>Características edición</label>
			                            	<textarea class="form-control" />
			                            </div>
						    	    </div>
						    	</div>
						    </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <input type="hidden" name="save" value="contact" />
                                <b:Button ui:field="guardarButton" styleName="btn btn-default" text="Guardar" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
	    </div>
	</g:HTMLPanel>
</ui:UiBinder>